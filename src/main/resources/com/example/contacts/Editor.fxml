<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: e0f2f1;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.contacts.Editor">
   <children>
      <TextArea fx:id="taDescription" centerShape="false" layoutX="42.0" layoutY="90.0" prefHeight="242.0" prefWidth="516.0" wrapText="true">
         <padding>
            <Insets left="10.0" top="10.0" />
         </padding>
      </TextArea>
      <ImageView fx:id="ivEditorIcon" fitHeight="46.0" fitWidth="57.0" layoutX="42.0" layoutY="34.0" opacity="0.64" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../images/editor_icon.png" />
         </image>
      </ImageView>
      <Label layoutX="99.0" layoutY="34.0" prefHeight="46.0" prefWidth="441.0" text="Edit your description here">
         <font>
            <Font size="27.0" />
         </font>
      </Label>
      <Label layoutX="42.0" layoutY="340.0" text="or choose file from your computer" />
      <Button fx:id="btnChooseFile" layoutX="172.0" layoutY="359.0" mnemonicParsing="false" onAction="#onChooseFileButtonClick" onMouseEntered="#onMouseEntered" onMouseExited="#onMouseExited" style="-fx-background-color: #37474f; -fx-background-radius: 4px;" text="Choose File" textFill="WHITE" />
      <Button fx:id="btnOk" layoutX="508.0" layoutY="351.0" mnemonicParsing="false" onAction="#onOkButtonClick" onMouseEntered="#onMouseEntered" onMouseExited="#onMouseExited" style="-fx-background-color: #198754; -fx-background-radius: 8px;" text="OK" textFill="WHITE">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
